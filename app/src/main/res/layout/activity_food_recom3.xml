<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodRecom3Activity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/group_142"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/strawbery_vektor" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/backpink2_vektor"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="281dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/pinklove"/>
        <View
            android:id="@+id/rectangle_10"
            android:layout_width="wrap_content"
            android:layout_height="126dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/foodrecomendation_vektor" />
        <View
            android:id="@+id/rectangle_11"
            android:layout_width="wrap_content"
            android:layout_height="126dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/foodrecomendation_vektor" />
        <View
            android:id="@+id/rectangle_12"
            android:layout_width="wrap_content"
            android:layout_height="126dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/foodrecomendation_vektor" />

        <TextView
            android:id="@+id/Dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="193dp"
            android:gravity="top"
            android:fontFamily="@font/poppins_medium"
            android:text="Strawberry Oatmeal Bar"
            android:textColor="@color/white"
            android:textSize="17dp"/>

        <!-- 18:00 - 19.00 -->
        <TextView
            android:id="@+id/jamMalam"
            android:layout_width="217dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="225dp"
            android:gravity="top"
            android:fontFamily="@font/poppins"
            android:text="Terbuat dari buah strawberry asli dengan topping creamy yang renyah."
            android:textColor="@color/white"
            android:textSize="10dp" />

    </androidx.cardview.widget.CardView>

    <!-- Description -->

    <TextView
        android:id="@+id/description"
        android:layout_width="82dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:gravity="top"
        android:text="Description"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <TextView
        android:id="@+id/rasa_strobe"
        android:layout_width="327dp"
        android:layout_height="94dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins"
        android:gravity="top"
        android:textSize="12dp"
        android:justificationMode="inter_word"
        android:lineSpacingExtra="-4dp"
        android:text="Rasa stroberi segar yang dikemas dalam batangan oatmeal buatan sendiri ini. Dikombinasikan dengan kayu manis hangat, jus lemon pedas, gula merah manis dan banyak lagi, sulit dipercaya bahwa bayi-bayi ini sangat rendah kalori!
"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rasa_strobe">

        <!-- Group 136 -->
        <TextView
            android:id="@+id/group_136"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:background="@drawable/bgpink10_vektor"
            android:backgroundTint="@color/pinkFood"
            android:gravity="center"
            android:text="carbo"
            android:textColor="@color/white" />

        <TextView

            android:id="@+id/group_137"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/bgpink10_vektor"
            android:backgroundTint="@color/pinkFood"
            android:gravity="center"
            android:text="calories"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/group_138"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="180dp"
            android:background="@drawable/bgpink10_vektor"
            android:backgroundTint="@color/pinkFood"
            android:gravity="center"
            android:text="protein"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/group_139"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="270dp"
            android:background="@drawable/bgpink10_vektor"
            android:backgroundTint="@color/pinkFood"
            android:gravity="center"
            android:text="fat"
            android:textColor="@color/white" />

        <!-- Line 15 -->
        <View
            android:id="@+id/line_15"
            android:layout_width="1dp"
            android:layout_height="135dp"
            android:layout_marginLeft="76dp"
            android:background="@color/pinkFood" />

        <View
            android:id="@+id/line_16"
            android:layout_width="1dp"
            android:layout_height="135dp"
            android:layout_marginLeft="166dp"
            android:background="@color/pinkFood" />

        <View
            android:id="@+id/line_17"
            android:layout_width="1dp"
            android:layout_height="135dp"
            android:layout_marginLeft="256dp"
            android:background="@color/pinkFood" />

        <!-- 20 g -->
        <TextView
            android:id="@+id/g"
            android:layout_width="30dp"
            android:layout_height="21dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal|top"
            android:text="20 g"
            android:textColor="@color/pinkFood"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calori"
            android:layout_width="30dp"
            android:layout_height="21dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal|top"
            android:text="123"
            android:textColor="@color/pinkFood"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calori2"
            android:layout_width="30dp"
            android:layout_height="21dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal|top"
            android:text="kcal"
            android:textColor="@color/pinkFood"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/protein"
            android:layout_width="30dp"
            android:layout_height="21dp"
            android:layout_marginLeft="201dp"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal|top"
            android:text="3 g"
            android:textColor="@color/pinkFood"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fat"
            android:layout_width="30dp"
            android:layout_height="21dp"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal|top"
            android:text="5 g"
            android:textColor="@color/pinkFood"
            android:textSize="14dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="265dp"
        android:text="Inggredients"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="250dp"
        android:text="Crust and Crumble"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

