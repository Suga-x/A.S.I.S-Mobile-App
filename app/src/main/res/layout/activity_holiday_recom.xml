<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HolidayRecomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Vector -->
        <View
            android:id="@+id/vector"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/backyellow"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/indonesiaCard"
            app:cardCornerRadius="15dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Group 193 -->
            <View
                android:id="@+id/group_193"
                android:layout_width="328dp"
                android:layout_height="315dp"
                android:background="@drawable/indonesia_vektor"
                />

            <!-- Rectangle 296 -->
            <View
                android:id="@+id/rectangle_2"
                android:layout_width="328dp"
                android:layout_height="148dp"
                android:layout_marginTop="167dp"
                android:background="@drawable/opacity_rectangel"
                />
            <View
                android:layout_width="328dp"
                android:layout_height="148dp"
                android:layout_marginTop="167dp"
                android:background="@drawable/opacity_rectangel"
                />

            <!-- Indonesia -->
            <TextView
                android:id="@+id/indonesia"
                android:layout_width="125dp"
                android:layout_height="38dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="250dp"
                android:text="Indonesia"
                android:fontFamily="@font/poppins_medium"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="top"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/internationalCard"
            app:cardCornerRadius="15dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/international"
                android:layout_width="328dp"
                android:layout_height="315dp"
                android:background="@drawable/international_vektor" />

            <View
                android:id="@+id/rectangle_3"
                android:layout_width="328dp"
                android:layout_height="148dp"
                android:layout_marginTop="167dp"
                android:background="@drawable/opacity_rectangel"
                />
            <View
                android:layout_width="328dp"
                android:layout_height="148dp"
                android:layout_marginTop="167dp"
                android:background="@drawable/opacity_rectangel"
                />

            <!-- Indonesia -->
            <TextView
                android:id="@+id/internationalText"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="249dp"
                android:gravity="top"
                android:text="International"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>