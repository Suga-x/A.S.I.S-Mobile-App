<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutRecom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/vector"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:background="@drawable/backgreen_vektor"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/belance"
            android:layout_width="328dp"
            android:layout_height="209dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/cyanWorkout">

            <!-- Balance -->
            <TextView
                android:id="@+id/balance"
                android:layout_width="103dp"
                android:layout_height="38dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="14dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="43dp"
                android:text="Balance"
                android:fontFamily="@font/poppins_medium"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="top"
                />

            <TextView
                android:id="@+id/your_body"
                android:layout_width="71dp"
                android:layout_height="21dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="75dp"
                android:text="Your Body"
                android:textStyle="normal"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="top"
                />

            <View
                android:id="@+id/hot_yoga_he"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/yoga_vektor"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/group_142"
            android:layout_width="328dp"
            android:layout_height="209dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/cyanWorkout">

            <!-- Balance -->
            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="215dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="99dp"
                android:text="Weight"
                android:textSize="25dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textAlignment="viewEnd"
                android:gravity="top"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/loss"
                android:layout_width="31dp"
                android:layout_height="21dp"
                android:layout_marginLeft="281dp"
                android:layout_marginTop="133dp"
                android:text="Loss"

                android:textStyle="normal"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:gravity="top"
                />

            <View
                android:id="@+id/tips_to_los"
                android:layout_width="266dp"
                android:layout_height="235dp"
                android:background="@drawable/weight" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/group_143"
            android:layout_width="328dp"
            android:layout_height="209dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/cyanWorkout">

            <!-- Gain -->
            <TextView
                android:id="@+id/gain"
                android:layout_width="60dp"
                android:layout_height="38dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="99dp"
                android:text="Gain"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="top"
                />

            <!-- Weight -->
            <TextView
                android:id="@+id/weightIsi"
                android:layout_width="51dp"
                android:layout_height="21dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="133dp"
                android:text="Weight"
                android:textStyle="normal"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:gravity="top"
                />

            <View
                android:id="@+id/gainVektor"
                android:layout_width="268dp"
                android:layout_height="match_parent"
                android:layout_marginStart="57dp"
                android:background="@drawable/gain_vektor" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>